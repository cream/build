pkgname="{{ name }}"
pkgver={{ version }}
pkgrel={{ release }}
pkgdesc="{{ description }}"
arch=('i686')
url="{{ url }}"
license=({{ license }})
groups=()
depends=(python2 pygobject pygtk python2-cairo python-lxml xmlserialize gpyconf librsvg dbus-python ooxcb)
source=({{ source }})
md5sums=('{{ checksum }}')

build() {
  cd $srcdir/$pkgname-$pkgver-$pkgrel/
  python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}
